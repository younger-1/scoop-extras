    },
    "architecture": {
        "64bit": {
            "url": "https://download.jetbrains.com/rider/JetBrains.Rider-2024.2.5.exe#/dl.7z",
            "hash": "e8f1e922e481927a92536faf8ddb132b8e440e702efde7919888ae9f07bf5b57",
            "bin": [
                [
                    "IDE\\bin\\rider64.exe",
                    "rider"
                ]
            ],
            "shortcuts": [
                [
                    "IDE\\bin\\rider64.exe",
                    "JetBrains\\Rider"
                ]
            ]
        }
    },
    "extract_to": "IDE",
    "installer": {
        "script": [
